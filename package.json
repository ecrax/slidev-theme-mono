{
  "name": "slidev-theme-mono",
  "version": "0.0.2",
  "homepage": "https://github.com/ecrax/slidev-theme-mono#readme",
  "bugs": {
    "url": "https://github.com/ecrax/slidev-theme-mono/issues"
  },
  "author": {
    "name": "Leo Kling",
    "url": "https://leo-kling.dev/"
  },
  "license": "MIT",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.43.6",
    "codemirror-theme-vars": "^0.1.2",
    "prism-theme-vars": "^0.2.4",
    "theme-vitesse": "^0.7.3"
  },
  "devDependencies": {
    "@slidev/cli": "^0.43.6",
    "playwright-chromium": "^1.38.1"
  },
  "slidev": {
    "colorSchema": "both",
    "highlighter": "all",
    "defaults": {
      "fonts": {
        "sans": "Iosevka",
        "mono": "Iosevka"
      },
      "lineNumbers": true,
      "hightlighter": "prism"
    }
  }
}
